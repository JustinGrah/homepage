pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'npm install'       
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'npm run test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                dockerfile {
                    filename 'Dockerfile'
                    label 'homepage'
                    additionalBuildArgs  '--build-arg version=1'
                }
            }
        }
    }
}